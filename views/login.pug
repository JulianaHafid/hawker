extends layout

block content

  <!--This section loads the navigation bar-->
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Hawker@SG
      #myNavbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='#') Home
          li
            a(href='hawker') Hawker
          li
            a(href='#') Page 3

        navbar-form.navbar-right.loginButton
          a.btn.btn-success.active(href='/users/login') Log in


  <!--This section loads the HawkerSG image-->
    #jumbo.jumbotron.jumbotron-fluid.introImageLogin
      .container
        .col-sm-6.col-sm-offset-3
          h1
            span.fa.fa-sign-in
            |  Login

          // LOGIN FORM
          form(action='/users/login', method='post')
            .form-group
              label Email
              input.form-control(type='text', name='email')
            .form-group
              label Password
              input.form-control(type='password', name='password')
            button.btn.btn-success(type='submit')
              i.icon-signin
              |    Sign in
            a.button#btn-fbsignup.btn.btn-primary(href='../users/auth/facebook')
              i.icon-facebook
              |    Sign in with Facebook
            a.button.btn.btn-primary(href='/users/signup')
              i.icon-check
              |    Sign up
          hr


  <!--This section displays all Hawkers.-->
  .row
    .col-md-12
      .container
        .row
          h2
          #custom-search-input
            .input-group.col-md-12
              input.search-query.form-control(type='text', placeholder='Search')
              span.input-group-btn
                button.btn.btn-danger(type='button')
                  span.glyphicon.glyphicon-search
  .work
    .category-buttons
      a.active.all(href='#', data-group='all') All
      a(href='#', data-group='chinese') chinese
      a(href='#', data-group='malay') malay
      a(href='#', data-group='indian') indian
    #grid.grid
      a.card(href='/hawker', data-groups='chinese,>$5')
        img(src='http://www.straitstimes.com/sites/default/files/styles/x_large/public/articles/2015/07/11/st_20150711_zkhawker11f389_1502687.jpg?itok=CAhfSbLf')
        .title Rice Garden
      a.card(href='#', data-groups='malay,')
        img(src='http://www.seriouseats.com/images/20110829-168346-singapore-hawker-center-geylang-road.jpg')
