extends layout

block content

  <!--This section loads the navigation bar-->
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Hawker@SG
      #myNavbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='#') Home
          li
            a(href='hawker') Hawker
          li
            a(href='#') Page 3

        navbar-form.navbar-right.loginButton
          a.btn.btn-success.active(href='/users/login') Log in


  <!--This section loads the HawkerSG image-->
    #jumbo.jumbotron.jumbotron-fluid.introImageLogin
      .container
        .col-sm-6.col-sm-offset-3
          h1
            span.fa.fa-sign-in
            |  Signup
          // LOGIN FORM
          form(action='/users/signup', method='post')
            .form-group
              label Name
              input.form-control(type='text', name='name')
            .form-group
              label Email
              input.form-control(type='text', name='email')
            .form-group
              label Password
              input.form-control(type='password', name='password')
            button#btn-fbsignup.btn.btn-success(type='submit')
              i.icon-signup
              |  Â  Sign up


  <!--This section displays all Hawkers.-->
  .row
    
    .col-md-12
      .container
        .row
          h2
          #custom-search-input
            .input-group.col-md-12
              input.search-query.form-control(type='text', placeholder='Search')
              span.input-group-btn
                button.btn.btn-danger(type='button')
                  span.glyphicon.glyphicon-search
  .work
    .category-buttons
      a.active.all(href='#', data-group='all') All
      a(href='#', data-group='chinese') chinese
      a(href='#', data-group='malay') malay
      a(href='#', data-group='indian') indian
    #grid.grid
      a.card(href='/hawker', data-groups='chinese,>$5')
        img(src='http://www.straitstimes.com/sites/default/files/styles/x_large/public/articles/2015/07/11/st_20150711_zkhawker11f389_1502687.jpg?itok=CAhfSbLf')
        .title Rice Garden
      a.card(href='#', data-groups='malay,')
        img(src='http://www.seriouseats.com/images/20110829-168346-singapore-hawker-center-geylang-road.jpg')
        .title Hajah Jamilah Raj Mohamed Food
      a.card(href='#', data-groups='chinese,')
        img(src='https://sg.openrice.com/userphoto/Article/0/6/00018VE02551DC3A17A62Bj.jpg')
        .title Choon Kee Fishball
      a.card(href='#', data-groups='chinese,')
        img(src='https://migrationology.smugmug.com/Singapore-2016/i-6PCPf7G/0/X3/singapore-food-guide-19-X3.jpg')
        .title Sungei Road Laksa
      a.card(href='#', data-groups='chinese,')
        img(src='https://c2.staticflickr.com/9/8420/30213869305_02cbe1e3da_b.jpg')
        .title Sumo Big Prawn
      a.card(href='#', data-groups='malay,')
        img(src='https://bondingtool.files.wordpress.com/2015/06/changi-village-hawker-centre-11.jpg?w=640&h=427')
        .title Traditional Nasi Lemak
      a.card(href='#', data-groups='indian,')
        img(src='http://farm8.staticflickr.com/7379/9600998119_ce2746cd8a_o.jpg')
        .title Allaudin Briyani
      a.card(href='#', data-groups='chinese,')
        img(src='https://farm4.staticflickr.com/3940/15736838045_3a4704af58_k.jpg')
        .title Teochew Handmade Pau
      a.card(href='#', data-groups='indian,')
        img(src='https://c1.staticflickr.com/3/2923/33288383240_71e138d95e_b.jpg')
        .title Rahmath Cheese Prata
      .guide

  #login.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal') x
          h3 Login to Hawker@SG
        .modal-body
          form(method='post', action='', name='login_form')
            h4
              input#email.span3(type='text', name='eid', placeholder='Email')
            h4
              input.span3(type='password', name='passwd', placeholder='Password')
            .row
              p.col-md-6
                button.btn.btn-primary(type='submit') Log in
            a(href='#') Or Login with
            .row
              p.col-md-2
                button.btn.btn-primary(type='submit') Facebook
              p.col-md-2
                button.btn.btn-success(type='submit') Google
        .modal-footer
          p
            | Sign up as new user?
            a.btn.btn-primary.newSignUp(href='#') Sign Up

  block scripts
    script(src='/javascripts/main.js')
